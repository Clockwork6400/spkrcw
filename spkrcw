cleanExit() {
	rm -f ${choices}
	exit ${1:-0}
}

trap 'cleanExit 1' 1 2 3 5 15	# HUP, INT, QUIT, TRAP, TERM

choices=${TMP:-/tmp}/_spkrcw_choices.$$
speaker=/dev/speaker

test -w ${speaker}
if [ $? -ne 0 ]
then
	echo "You have no write access to $speaker or the speaker device is"
	echo "not enabled in kernel. Cannot play any melody! See spkr(4)."
	sleep 2
	cleanExit 1
fi

/usr/bin/dialog --title "Melody arrangements for speaker by Clockwork@FreeBSD.org" --checklist \
	"Please select the melodies you wish to play (space for select)" \
	0 0 0 \
	DeepPurple "Deep Purple - Smoke on the water" OFF \
	Nokia "Nokia Ringtone" OFF \
	PolkaR "Italian Polka Rachmaninov" OFF \
	Cat-waltz "Cat Waltz" OFF \
	Circus.march "Circus March (need to rewrite)" OFF \
	Bumblebee "Flight of the Bumblebee" OFF \
	Samsung "Washing Machine Ringtone" OFF \
	Russia "Russian anthem" OFF \
	Ukraine "Anthem of Ukraine" OFF \
	MartyRobbins "Marty Robbins - Love Is Blue" OFF \
	CrazyF "Crazy Frog Axel f" OFF \
	WoT "WoT - 8 bit" OFF \
	StormVivaldi "Storm Vivaldi" OFF \
	Christmas "We Wish You a Merry Christmas" OFF \
	NewYear "Deck the Halls b" OFF \
	OwenWasHer "U.N. Owen Was Her? (need to rewrite)" OFF \
	Pirates "He’s a Pirate" OFF \
	HarryPotter "HarryPotter OST soundtrack" OFF \
	TheDrunkenWhaler "The Drunken Whaler" OFF \
	SpongeBob "Sponge Bob - Theme" OFF \
	Twist "Shurik's Adventures: Twist" OFF \
	Ghostbusters "Ghostbusters Theme" OFF \
		2> ${choices} || cleanExit 0

echo ""
tunes="`cat ${choices} | tr -d '\"'`"
for tune in ${tunes:-DEFAULT}
do
	case ${tune:-NULL} in
	DEFAULT)
		title="(default melody)"
		music="ec"
		;;
	DeepPurple)
		title="Deep Purple - Smoke on the water"
		music="DFGP8L8DP8FP8G+L4GP4DFGP8L8FP8L3D"
		;;
	Nokia)
		title="Nokia Ringtone"
		music="O5L8EDO4L4F#G# O5L8C#O4BL4DE L8BAL4C#E L2AP2 O5L8EDO4L4F#G# O5L8C#O4BL4DE L8BAL4C#E L2AP2"
		;;
	PolkaR)
		title="Итальянская полька Рахманинова"
		music="T170 L8O3 GO4CD+ GP8GG+GP8E-P8 FP8GP8L4GP4 L8GP8GG+GP8DP8 E-P8GP8L4GP4 >CP4CP4 L8C<A+G+GFP8G+P8 GP8GG+GP8GP8 GE+D+DC L8O3 GO4CD+ GP8GG+GP8E-P8 FP8GP8L4GP4 L8GP8GG+GP8DP8 E-P8GP8L4GP4 >CP4CP4 L8C<A+G+GFP8G+P8 GP8GG+GP8GP8 GE+D+DC"
		;;
	Cat-waltz)
		title="Собачий вальс"
		music="T170 L8ED <L4G>GGL8ED <L4G>GGL8ED L4<G>G<E>G <D>F#F#L8ED L4<D>F#F#L8ED L4<D>F#F#L8ED L4<D>F#<E>F# <G>GGP4 <G>G<E>G <D>F#F#P4 <D>F#<E>F# <G>GGP4 <G>G<E>G <D>F#F#P4 <D>F#<E>F# <G>GGP4"
		;;
	Circus.march)
		title="^"
		echo 'Title: Цирковой марш '
		music=""
	echo 'T140 L3GL12>CGC L6BL16BL6GL16G<L6GL16G>L6CL16C L3E<L12GEG>C<G>C<GEGL6EL16EL12G>CE L2EL12<GEG >C<G>C<GEGL8EL16EL12G>CE L3GL12<<GGGL4G>>L6D+L16E L12GF#ED#DC#L8CP8L4<B >L6EL16<BL12BBBL6>CL16<B>L6CL16<B L8BP8 L4B>ED#' > /dev/speaker
	echo 'T140 >L6DL16BL12<BBBL6B>P16L6C#L16<<G> L6>CL16<<G>L6BL16<E>L6GL16<E>L6DL16<E> L6D#L16<BL12BBBL6>CL16<B>L6CL16<B L8B>P8L4B>ED# L4DL16<BBBL4B>P16L8C#<<G> L6>CL16<<G>L6BL16<E L6C#L16D#L6EL16F L6BL16<B>L6EL16D#L6DL16<BL12GEG L8BP8 >L4>B>ED# L4DL16<BBBL4BL16BL8>C#L16<B' > /dev/speaker
	echo 'T140 L6>C<L16GL6BL16DL6GL16<b>L6EL16<b> L6EL16<bL12AAAA>EF<A#A#A#A#>E#F <BBBB>E#F<B>C#C#C#FG G#FG#AG#AA#G#A#BA#B >C#<B#>C#D#C#D#ED#EF#EF# L4GL12CCCL4CL6D#L16E L12GF#ED#DC#L8CP8L4<B L6E>L16<BL12BBBL6>C<L16BL6>C<L16B L8BP8L4B>ED#' > /dev/speaker
	echo 'T140 >L6DL16BL12<BBBL6B>P16L6C#L16<<G> L6>CL16<<G>L6BL16<E>L6GL16<E>L6DL16<E> L6D#L16<BL12BBBL6>CL16<B>L6CL16<B L8B>P8L4B>ED# L4DL16<BBBL4B>P16L8C#<<G> L6>CL16<<G>L6BL16<E L6C#L16D#L6EL16F L6BL16<B>L6EL16D#L6DL16<BL12GEG L8BP8 >L4>B>ED# L4DL16<BBBL4BL16BL8>C#L16<B' > /dev/speaker
	echo 'T140 L6>CL16<GL6BL16DL6AL16DL6GL16E L6>F#L16CL12CCCL6CL16CL6EL16C L12D<AA>L6CL16<AL6BL16AL6A#L16E L12BA#>CC<EEBA#BA#CC L4BL6>D#L16EL4GF# L8EP8L12ED#DC#C<BA#AG# L8GP8BP8<EP8P4' > /dev/speaker
		;;
	Bumblebee)
		title="^"
		music=""
		echo 'Title: Полёт шмеля'
		while read line; do
        echo "${line}" >/dev/speaker
done <<-__EOF__
	T150 O4 L16ED#DC#DC#C<B> C<BA#AG#GF#F ED#DC#DC#C<B> C<BA#AG#GF#F ED#DC#DC#C<B> ED#DC#DC#C<B> ED#DC#CFED# ED#DC#CC#EE# ED#DC#CFED# ED#DC#CC#EE# ED#DC#DC#C<B> CC#DD#EFED ED#DC#DC#C<B> CC#DD#EF#GG#  ED#DC#CFED# ED#DC#CC#EE# ED#DC#CFED# ED#DC#CC#EE# ED#DC#DC#C<B> CC#DD#EF#GG# ED#DC#DC#C<B> CC#DD#EF#GG# A<AAAAA>A<A >A#<A#A#A#A#A#A# >A<AAA>A<AAA >A#<A#A#A#A#A#A#A# >AA#AG#AA#AG# AA#AG#AA#AG# AA#B>CC#C<BA AA#B>CC#C<BA
