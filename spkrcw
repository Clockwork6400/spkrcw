	T150 O3 L16E<G#AA#B>CC# DC#C<B>C<BA#A GAA#B>CC#DD# EFED#EF#GG# AG#GF#GF#FE FED#DC#C>BA# AG#GF#GF#FE FED#DC#C<BA# AA#AG#AA#AG# A>A<A#B>CC#DD# EFED#EFED# E>E<D#EFF#GG# L8AP8L16>EFF#G G#AA#B<CC#DD# EFF#GG#AA#B >CC#DD#EF#GG# L4AP4 <AP4 <<AP4
	__EOF__
		;;
	Samsung)
		title="Мелодия SAMSUNG от стиральной машинки"
		music="O4 L8AO5DDF#F#L4DO4L8A AL6AL16AO5EDC#O4BL4AP8 L8AO5DDF#F#L4DO4L8A O5DC#L16O4BO5C#L8DO4G#L4AP8 L8AO5C#C#L16DC#O4BO5C#L8DP8O4A O5DC#C#L16C#F#EC#L4DO4L8A O5DDO4BBO5DL4DL8O4A AL6AL16AO5L8ED-DP8 L8DO4L16BBL8BL16BO5DD-EL4DL8O4A AL6AL16AL8O5ED-DP8 L8F#L16AEF#DL4O4BP8P4"
